{
    "name": "tmp-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@koa/cors": "^3.2.0",
        "@types/koa-bodyparser": "^4.3.7",
        "axios": "^0.26.1",
        "bcrypt": "^5.0.1",
        "bootstrap": "^5.1.3",
        "jsonwebtoken": "^8.5.1",
        "koa": "^2.13.4",
        "koa-bodyparser": "^4.3.0",
        "react": "^17.0.2",
        "react-bootstrap": "^2.1.2",
        "react-dom": "^17.0.2",
        "react-hook-form": "^7.27.1",
        "react-router-dom": "^6.2.2",
        "react-scripts": "5.0.0",
        "sealious": "^0.14.4",
        "sql-template-strings": "^2.2.2",
        "sqlite3": "^5.0.3",
        "ts-node": "^10.7.0",
        "typescript": "^4.5.5",
        "uuid4": "^2.0.2",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "multiple-scripts-tmux \"npm run backend\" \"npm run frontend\"",
        "frontend": "craco start",
        "backend": "ts-node-dev -r tsconfig-paths/register ./backend/index.ts",
        "backend-test": "ACCESS_TOKEN_SECRET=secret-test-token REFRESH_TOKEN_SECRET=secret-refresh-token mocha -r ts-node/register -r tsconfig-paths/register './tests/**/*.test.ts'",
        "inspect-db": "sqlite3 ./database.db",
        "clean-db": "rm ./database.db",
        "build": "craco build",
        "test": "craco test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "overrides": [
            {
                "files": [
                    "**/*.stories.*"
                ],
                "rules": {
                    "import/no-anonymous-default-export": "off"
                }
            }
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@craco/craco": "^6.4.3",
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.3",
        "@testing-library/user-event": "^13.5.0",
        "@types/bcrypt": "^5.0.0",
        "@types/jest": "^27.4.1",
        "@types/jsonwebtoken": "^8.5.8",
        "@types/koa__cors": "^3.1.1",
        "@types/node": "^16.11.26",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@types/sinon": "^10.0.11",
        "@types/sqlite3": "^3.1.8",
        "@types/supertest": "^2.0.12",
        "@types/uuid4": "^2.0.0",
        "lorem-ipsum": "^2.0.4",
        "mocha": "^9.2.2",
        "multiple-scripts-tmux": "^1.0.4",
        "sinon": "^13.0.2",
        "supertest": "^6.2.3",
        "ts-node-dev": "^1.1.8",
        "tsconfig-paths": "^3.14.0",
        "webpack": "^5.69.1"
    }
}
