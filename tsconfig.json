{
    "compilerOptions": {
        "target": "ES2019",
        "lib": ["dom", "dom.iterable", "esnext", "es6"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": false,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "outDir": "dist",
        "paths": {
            "@tmp/front/*": ["./frontend/*"],
            "@tmp/front": ["./frontend"],
            "@tmp/back/*": ["./backend/*"],
            "@tmp/back": ["./backend"]
        }
    },
    "include": ["frontend", "backend", "tests"]
}
